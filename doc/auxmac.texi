@c extended commands

@macro vimage{filename}
@ifinfo
@image{\filename\}
@end ifinfo
@html
<object data="\filename\.svg" type="image/svg+xml" width="800" height="600">
  <param name="src" value="\filename\.svg" />
  <p>(Image "\filename\" not displayed because of lacking SVG support.)</p>
</object>
@end html
@iftex
@center@image{\filename\}
@end iftex
@end macro


