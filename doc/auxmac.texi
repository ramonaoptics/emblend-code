@macro semilog{significant, exponent}
@ifinfo
\significant\*10^\exponent\@c
@end ifinfo
@html
<math xmlns="http://www.w3.org/1998/Math/MathML" display="inline">
    <mn>\significant\</mn>
    <mo>&times;</mo>
    <msup>
        <mn>10</mn>
        <mn>\exponent\</mn>
    </msup>
</math>
@end html
@tex
\\ifmmode\significant\ \\times 10^{\exponent\}\\else$\significant\ \\times 10^{\exponent\}$\\fi%
@end tex
@end macro
